@import '~@/assets/style/mixins'
#login-container
  wh(100%)
  flex-align-center()
  transition background-image 1s ease-in-out
  .login_wrapper
    width 870px
    height 500px
    box-shadow 0px 0px 12px 0px rgba(0,0,0,0.15)
    border-radius 20px
    .ant-card-body
      wh(100%)
      padding 20px
      flex-f()
      > img
          width 415px
          height 100%
      .ant-form
        flex 1
      .ant-form
        padding-left 32px
        padding-right 23px
        overflow hidden
    .login-img
      width 86px
      height 32px
      margin-left 4px
      cursor pointer
    .verify_wrapper
      .ant-input-suffix
        .ant-input-clear-icon
          vertical-align middle
        img
          vertical-align middle
    .error_tips
      display block
      height 34px
      line-height 34px
      margin 10px auto 0
      color #F5222D
      f14()
      tc()
      &.show
        background rgba(255,251,230,1)
    .ant-tabs
      margin 0 -28px
      overflow unset
      .ant-tabs-large-bar
        .ant-tabs-nav
          width 100%
        .ant-tabs-tab
          color #333333
          f18()
          width 50%
          padding 0
          margin 0
          height 80px
          line-height 80px
          tc()
          &.ant-tabs-tab-active
            color #19BC9C
      .ant-tabs-content
        .ant-tabs-tabpane
          padding-left 32px
          padding-right 23px
      .error_tips
        display block
        height 34px
        line-height 34px
        margin 10px auto 0
        color #F5222D
        f14()
        tc()
        &.show
          background rgba(255,251,230,1)
      .check_item
        padding-top 20px
        padding-bottom 28px
    .button_login
      display block
      width 100%
      height 46px
      // margin 40px auto 0
      margin 0 auto
      f16()
    .ant-form-item
      margin-bottom 0px
      &.six_code
        padding-bottom 50px
        .verify_code
          color #19BC9C
          cursor pointer
          &.sending
            color #DCDDDE
            cursor not-allowed
      .ant-input-affix-wrapper
        .ant-input-prefix
          left 0
      .ant-form-explain
        display none !important
      .has-error
        .ant-input-affix-wrapper
          .ant-input,
          .ant-input:hover
            border-color #F5222D
      input
        width 100%
        height 70px
        padding-left 25px
        border none
        bd-b(#E9E9E9)
        border-radius(0)
        &:focus
          border-color #19BC9C
          border-right-width 0px !important
          box-shadow none
  .qrcode
    margin-left: 40px
    text-align: center
  .qrcode-title
    text-align center
    height 40px
    font-size 28px
    font-weight 400
    color rgba(51,51,51,1)
    line-height 40px
    margin 20px 0 20px -40px
  .forgetpassword
    color #19BC9C
    cursor pointer
    display inline-block
    text-align right
    width: 90%


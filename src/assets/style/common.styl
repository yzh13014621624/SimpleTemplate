@import 'antd/input'
@import 'antd/button'
@import 'antd/select'
@import 'antd/datepicker'
@import 'antd/form'
@import 'antd/message'
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-size: 12px;/*no*/
}
 html, body {
  width: 100%;
  height: 100%;
  font-family: "PingFang SC","Microsoft YaHei","微软雅黑","inherit","Arial";
}
body {
  position: relative;
  -webkit-overflow-scrolling: touch;
  .ant-calendar-picker-container {
    z-index: 9999;
   }
}
p {
  margin: 0;
}
a {
  color: #19BC9C
}
#root {
  height: 100%;
  box-sizing: border-box;
}
/* @module scrollbar(滚动条) start */
::-webkit-scrollbar-track-piece {
  background-color:#f8f8f8;
}
::-webkit-scrollbar {
  width:6px;
  height:6px;
  display: none;
}
::-webkit-scrollbar-thumb {
  background-color:#dddddd;
  background-clip:padding-box;
  min-height:28px;
  border-radius: 5px;
}
::-webkit-scrollbar-thumb:hover {
  background-color:rgb(167, 164, 164);
}
/* @module scrollbar(滚动条) end */

/* table 表格样式 start */
.ant-table-body::-webkit-scrollbar {
  display: block;
  height: 10px;
}

.ant-table-body::-webkit-scrollbar-thumb {
  border-radius: 0
}

.ant-table-fixed-left,
.ant-table-fixed-right {
  bottom: 10px;
}

.table_padding_content,
.table_padding_content a {
  display: inline-block;
  width: 100%;
}

/* table 表格样式 end */

// 校验时去掉margin
.ant-form.ant-form-inline {
  .ant-form-item {
    margin-bottom: 0px;
  }
}